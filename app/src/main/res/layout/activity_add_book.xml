<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeActivity">

    <TextView
        android:id="@+id/TextTambahBuku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Buku"
        android:textSize="28dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/Judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul"
        android:textSize="18dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextTambahBuku"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="24dp"
        />

    <EditText
        android:id="@+id/etJudulBuku"
        android:layout_height="wrap_content"
        android:layout_width="280dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Judul"
        />

    <TextView
        android:id="@+id/Pengarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengarang"
        android:textSize="18dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Judul"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="24dp"
        />

    <EditText
        android:id="@+id/etPengarangBuku"
        android:layout_height="wrap_content"
        android:layout_width="300dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pengarang"
        />


    <TextView
        android:id="@+id/TahunBuku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tahun Buku"
        android:textSize="18dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pengarang"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="24dp"
        />

    <EditText
        android:id="@+id/etTahunBuku"
        android:layout_height="wrap_content"
        android:layout_width="300dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TahunBuku"
        />

    <Button
        android:id="@+id/ButtonTambahBuku"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:text="Tambah Buku"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="52dp"
        android:layout_marginRight="30dp"
        />

    <Button
        android:id="@+id/ButtonKemabliTambahBuku"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:text="Kembali"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="52dp"
        android:layout_marginLeft="30dp"
        />

</android.support.constraint.ConstraintLayout>