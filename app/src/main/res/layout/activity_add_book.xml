<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".homeActivity">

    <ProgressBar
        android:id="@+id/progresbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/TextTambahBuku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Buku"
        android:layout_gravity="center"
        android:textColor="@color/button"
        android:textSize="28dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextTambahBuku"
        android:layout_alignParentStart="true"
        android:background="@color/background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/namaFile"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="8dp"
            android:background="@drawable/edit_text_style"
            android:hint="Nama File" />

        <Button
            android:id="@+id/btnTmbahGambarBuku"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="bottom"
            android:background="@drawable/button_style"
            android:text="Upload"/>

    </LinearLayout>

    <TextView
        android:id="@+id/Judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul"
        android:layout_marginLeft="45dp"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/etJudulBuku"
        android:layout_width="310dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_style" />

    <TextView
        android:id="@+id/Pengarang"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengarang"
        android:layout_marginLeft="45dp"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/etPengarangBuku"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:background="@drawable/edit_text_style" />


    <TextView
        android:id="@+id/TahunBuku"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tahun Buku"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/etTahunBuku"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btnTBTambah"
            android:layout_marginLeft="95dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="Tambah"
            />

        <Button
            android:id="@+id/btnTBCancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_cancel_style"
            android:text="Batal" />
    </LinearLayout>
</LinearLayout>